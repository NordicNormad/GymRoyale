<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/CustomDialogTitleTextStyle</item>
    </style>

    <style name="CustomDialogTitleTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/pixel_font</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="SwitchCompat">
        <item name="colorControlActivated">#1a53ff</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>
</resources>
