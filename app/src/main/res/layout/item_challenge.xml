<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#000000">

    <!-- Workout name -->
    <TextView
        android:id="@+id/tvWorkout"
        android:fontFamily="@font/pixel_font"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Workout Name"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Reps and Weight -->
    <TextView
        android:id="@+id/tvRepsAndWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reps: 10, Weight: 100kg"
        android:textSize="16sp"
        android:fontFamily="@font/pixel_font"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWorkout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Trophies -->
    <TextView
        android:id="@+id/tvTrophies"
        android:layout_width="wrap_content"
        android:fontFamily="@font/pixel_font"
        android:layout_height="wrap_content"
        android:text="Trophies: 3"
        android:textSize="16sp"
        android:textColor="#FFD700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRepsAndWeight"
        android:layout_marginTop="8dp"/>

    <!-- Comment -->
    <TextView
        android:id="@+id/tvComment"
        android:layout_width="0dp"
        android:fontFamily="@font/pixel_font"
        android:layout_height="wrap_content"
        android:text="Great effort on this challenge!"
        android:textSize="14sp"
        android:textColor="#AAAAAA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTrophies"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Accept Button -->
    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:fontFamily="@font/pixel_font"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvComment"
        android:layout_marginTop="12dp"/>

    <!-- Reply Button -->
    <Button
        android:id="@+id/btnReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reply"
        android:backgroundTint="#1a53ff"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pixel_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvComment"
        android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
